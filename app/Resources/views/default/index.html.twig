{% extends 'base.html.twig' %}

{% form_theme form _self %}

{% block checkbox_row %}
    <div class="12u">

        {{ form_widget(form) }}
        {{ form_label(form) }}
    </div>
{% endblock %}

{% block form_row %}
    <div class="12u">
        {{ form_label(form) }}
        {{ form_widget(form) }}
    </div>
{% endblock %}

{% block form %}
    {{ form_start(form) }}
    <div class="row uniform">
        {% for row in form %}
            {{ form_row(row) }}
        {% endfor %}
    </div>
    {{ form_end(form) }}
{% endblock %}

{% block member_collection_row %}
